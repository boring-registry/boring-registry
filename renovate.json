{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "schedule": [
        "on monday"
      ],
      "groupName": "aws-sdk-go-v2",
      "matchPackageNames": [
        "github.com/aws/aws-sdk-go-v2{/,}**"
      ]
    },
    {
      "schedule": [
        "every month"
      ],
      "matchPackageNames": [
        "google.golang.org/genproto{/,}**"
      ]
    },
    {
      "schedule": [
        "every month"
      ],
      "matchPackageNames": [
        "golang.org/x/oauth2{/,}**",
        "golang.org/x/sync{/,}**"
      ]
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ]
    }
  ]
}
